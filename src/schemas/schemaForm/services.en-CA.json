          "properties": {
            "isSelected": {
              "type": "boolean",
              "default": true,
              "description": "",
              "title": "Is present",
              "help": ""
            },
            "isSelectable": {
              "type": "boolean",
              "default": true,
              "description": "",
              "title": "User can remove it",
              "help": ""
            },
            "titleValue": {
              "type": "string",
              "description": "Value to appear by default. If value is empty, title will not be present even if Is present is selected.",
              "title": "Value",
              "help": "",
              "default": ""
            }
          },
          "additionalProperties": false,
          "title": "Title",
          "help": ""
        },
        "map": {
          "description": "Map component.",
          "type": "object",
